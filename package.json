{
  "name": "season-pass",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "zip:build": "rm -f build.zip && cd build && zip -r ../build.zip .",
    "zip:src": "rm -f src.zip && zip -r src.zip src .env .prettierrc bun.lockb *.json eslint.config.js icon.png vite.config.ts",
    "build:safari": "xcrun safari-web-extension-converter --app-name destiny2-season-pass-wayback-machine --force --no-open --no-prompt --project-location ./safari ./build",
    "package:safari:ios": "xcodebuild -scheme \"destiny2-season-pass-wayback-machine (iOS)\" -project ./safari/destiny2-season-pass-wayback-machine/destiny2-season-pass-wayback-machine.xcodeproj -derivedDataPath ./safari/ios",
    "package:safari:mac": "xcodebuild -scheme \"destiny2-season-pass-wayback-machine (macOS)\" -project ./safari/destiny2-season-pass-wayback-machine/destiny2-season-pass-wayback-machine.xcodeproj -derivedDataPath ./safari/mac",
    "simulate:ios": "xcrun simctl boot 'iPhone 16' && open -a Simulator",
    "lint": "eslint .",
    "format": "prettier --write .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@tailwindcss/vite": "^4.0.9",
    "@tanstack/react-query": "^5.66.9",
    "bungie-net-core": "^3.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.476.0",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.9",
    "tailwindcss-animate": "^1.0.7",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/webextension-polyfill": "^0.12.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "prettier": "3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-static-copy": "^2.2.0"
  }
}
